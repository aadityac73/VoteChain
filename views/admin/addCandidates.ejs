<%- include('../partials/header'); -%>

<div class="container mt-5">
    <div class="row">
        <div class="col"> </div>
        <div class="col-sm-7 col-md-6 col-lg-5">
            <div class="card shadow-lg mb-5 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">New Candidate</h1>
                    <form class="needs-validation" action="/candidates/add" method="POST" novalidate>
                        <p><small class="text-muted">Feilds marked * are required.</small></p>
                        <div class="form-group">
                            <label class="required" for="username">Name</label>
                            <input type="text" class="form-control" name="candidate[name]" placeholder="Amit Shah" required autofocus>
                            <div class="invalid-feedback">
                                Please enter candidate name.
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="required">Constituency</label>
                            <select class="form-control" name="candidate[constituency]" required>
                                <option value="Varanasi">Varanasi</option>
                                <option value="Worli">Worli</option>
                                <option value="Amethi">Amethi</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="required" for="username">Image URL</label>
                            <input type="text" class="form-control" name="candidate[image]" placeholder="bit.ly/image" required>
                            <div class="invalid-feedback">
                                Please provide an Image URL.
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="required" for="username">Party name</label>
                            <input type="text" class="form-control" name="candidate[party]" placeholder="Shivsena" required>
                            <div class="invalid-feedback">
                                Please provide party name.
                            </div>
                        </div>
                        <button id="custom-button" class="btn btn-primary btn-block">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col"> </div>
    </div>
</div>


<%- include('../partials/footer'); -%>