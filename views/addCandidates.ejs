<%- include('partials/header'); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add Candidate</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="candidate[name]" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label>Constituency</label>
                    <select class="form-control" name="candidate[constituency]" required>
                        <option value="Varanasi">Varanasi</option>
                        <option value="Worli">Worli</option>
                        <option value="Amethi">Amethi</option>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="candidate[image]" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="candidate[party]" placeholder="Party name" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('partials/footer'); -%>